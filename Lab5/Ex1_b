from hmmlearn import hmm
import numpy as np

A = np.array([
    [0, 0.5, 0.5],
    [0.5, 0.25, 0.25],
    [0.5, 0.25, 0.25]
])

B = np.array([
    [0.1, 0.2, 0.4, 0.3],
    [0.15, 0.25, 0.5, 0.1],
    [0.2, 0.3, 0.4, 0.1]
])

pi = np.array([1/3, 1/3, 1/3])

m = hmm.CategoricalHMM(n_components=3)
m.startprob_ = pi
m.transmat_ = A
m.emissionprob_ = B

obs = np.array([[1,0,2,1,1,3,1,1,3,3,1,1]]).T

p = m.score(obs)
print("Prob:", np.exp(p))
